<%= render partial: 'shared/header', locals: { title: 'Budgets', subtitle: 'All the budgets' } %>
<%= render partial: 'shared/flash', locals: { notice: notice, errors: nil } %>

<section class="section">
  <h1 class="title">
    Listing
  </h1>
  <h2 class="subtitle">
    All budgets
  </h2>

  <div class="table-container">
    <table class="table is-fullwidth is-hoverable is-striped">
      <thead>
        <tr>
          <th><abbr title="ID">ID</abbr></th>
          <th><abbr title="Name">Name</abbr></th>
        </tr>
      </thead>
      <tfoot>
        <tr>
          <th><abbr title="Id">Id</abbr></th>
          <th><abbr title="Name">Name</abbr></th>
        </tr>
      </tfoot>
      <tbody>
        <%- @budgets.each do |b| %>
        <tr>
          <th><%= link_to b.id, budget_url(b) %></th>
          <td><%= link_to b.name, budget_url(b) %></td>
        </tr>
        <%- end %>
      </tbody>
    </table>
  </div>
  <%== @pagy.series_nav() if @pagy.pages > 1 %>
</section>

<%= link_to "New budget", new_budget_path %>
