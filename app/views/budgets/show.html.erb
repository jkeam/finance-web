<%= render partial: 'shared/header', locals: { title: 'Budget Detail', subtitle: '' } %>
<%= render partial: 'shared/flash', locals: { notice: notice, errors: @budget.errors } %>

<section class="section">
  <h1 class="title">
    <%= @budget.name %>
  </h1>
  <h2 class="subtitle">
    ID <%= @budget.id %>
  </h2>

  <div class="block">
    <%= pie_chart @budget_transaction_categories %>
  </div>

  <div class="block">
    <table class="table is-fullwidth">
      <thead>
        <tr>
          <th><abbr title="Category">Category</abbr></th>
          <th><abbr title="Amount">Amount</abbr></th>
        </tr>
      </thead>
      <tfoot>
        <tr>
          <th><abbr title="Category">Category</abbr></th>
          <th><abbr title="Amount">Amount</abbr></th>
        </tr>
      </tfoot>
      <tbody>
        <%- @budget.budget_transaction_categories.each do |c| %>
          <tr>
            <td><%= Transaction.pretty_print_category(Transaction.categories.key(c.transaction_category)) %></td>
            <td><%= Money.from_cents(c.amount_cents).format %></td>
          </tr>
        <% end %>
        <tr>
          <td><strong>Sum</strong></td>
          <td><strong><%= Money.from_cents(@budget.budget_transaction_categories.map{|c|c.amount_cents}.inject(&:+)).format %></strong></td>
        </tr>
      </tbody>
    </table>
  </div>

  <hr />

  <div class="block">
    <h1 class="title">
      Past Reference Data
    </h1>
    <%= render partial: 'dashboard/spend_per_category_listing', locals: {spending_by_category_per_month: @spending_by_category_per_month} %>
  </div>
</section>

<div class="field is-grouped">
  <%= link_to "Edit", edit_budget_path(@budget) %> |
  <%= link_to "Listing", budgets_path %>
</div>
<div class="field is-grouped">
  <%= button_to "Destroy this budget", @budget, method: :delete, class: 'button is-danger' %>
</div>
